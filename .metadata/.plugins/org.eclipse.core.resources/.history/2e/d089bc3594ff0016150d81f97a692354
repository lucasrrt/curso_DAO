public class Usuario {

	public static void main() {
		//JdbcTemplate jdbcTemplate;
		
		
		
		
		int opcao = 1;
		menu();
		Scanner reader = new Scanner(System.in);
		opcao = reader.nextInt();
		while(opcao!=0){
			if(opcao == 1){
				
			}
			menu();
			opcao = reader.nextInt();
		}
		
		reader.close();
	}
	
	public static void menu(){		
		System.out.println("#####################");
		System.out.println("## MENU DO USUÁRIO ##");
